@model SklepInternetowy.ViewModels.HomeViewModel
@using SklepInternetowy.Infrastructure

@{ 
    ViewBag.Title = "Strona główna";
}
    <nav class="kategorieHorizontal">
        <ul>
            @foreach (var kategoria in Model.Kategorie)
            {
                <li>
                    <a href="@Url.Action("Lista", "Albumy", new { nazwaKategorii = kategoria.NazwaKategorii.ToLower() })" style="background-image: url(@Url.IkonyKategoriiSciezka(kategoria.NazwaPlikuIkony)); ">
                        @kategoria.NazwaKategorii
                    </a>
                </li>
            }
        </ul>
        <a href="link">
            <img id="baner" src="../Content/Images/baner.png" />
        </a>
    </nav>
<section>
    <ul class="KursyTrzyKolumny duzaListaKursy">
        @foreach (var bestseller in Model.Bestsellery)
        {
            <li>
                <article>
                    <a class="dodajDoKoszykaLink" href="@Url.Action("DodajDoKoszyka", "Koszyk", new { id = bestseller.AlbumId })">
                        <img src="../Content/Images/koszyk.png" />
                    </a>
                    <a class="kursSzczegolyLink" href="@Url.Action("DodajDoKoszyka", "Koszyk", new { id = bestseller.AlbumId })">
                        <div class="bestsellerFlag"></div>
                        <img class="kurs" src="@Url.ObrazkiSciezka(bestseller.NazwaPlikuObrazka)" />
                        <h1>
                            @bestseller.TytulAlbumu - @bestseller.AutorAlbumu
                        </h1>
                    </a>
                </article>
            </li>
        }
    </ul>
</section>
    <section>
        <ul class="KursyTrzyKolumny duzaListaKursy">
            @foreach (var nowosc in Model.Nowosci)
            {
                <li>
                    <article>
                        <a class="dodajDoKoszykaLink" href="@Url.Action("DodajDoKoszyka", "Koszyk", new { id = nowosc.AlbumId })">
                            <img src="../Content/Images/koszyk.png" />
                        </a>
                        <a class="kursSzczegolyLink" href="@Url.Action("Szczegoly", "Albumy", new { id = nowosc.AlbumId })">
                            <div class="newFlag"></div>
                            <img class="kurs" src="@Url.ObrazkiSciezka(nowosc.NazwaPlikuObrazka)" />
                            <h1>
                                @nowosc.TytulAlbumu - @nowosc.AutorAlbumu
                            </h1>
                        </a>
                    </article>
                </li>
            }         
        </ul>
    </section>


